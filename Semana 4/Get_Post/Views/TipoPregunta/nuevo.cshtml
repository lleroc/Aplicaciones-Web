@model Get_Post.Models.TipoPreguntaModel

@{

    ViewData["Title"] = "Nuevo Tipo de Pregunta";
    Layout = "";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Nuevo Tipo de Pregunta</h1>

<hr />

<div class="row">
    <div class=" col-md-6">
        <form asp-action="nuevo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Detalle" class="control-label"></label>
                <input asp-for="Detalle" class="form-control"/>
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>
            <div class="from-group">
                <input type="submit" value="nuevo" class="btn btn-outline-success"/>
                <button class="btn btn-outline-secondary" asp-action="index">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}